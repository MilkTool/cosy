{ // return inner funciton
    fun make_hi_func() {
        fun say_hi(text) {
            return "Hi " + text
        }
        return say_hi
    }

    var say_hi_to = make_hi_func()
    print say_hi_to("John")
}

{ // scoping rules
    mut outer_scope = 42
    fun x() {
        outer_scope = outer_scope + 10
    }
    print outer_scope
    x()
    print outer_scope
}

{
    fun make_add_func(a) {
        fun do_add(b) {
            return a + b
        }
        return do_add
    }

    var add5 = make_add_func(5)
    print(add5(2)) // 7
}
